generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Excuse {
  id          String   @id @default(uuid())
  excuse_text String
  votes       Int      @default(0)
  created_at  DateTime @default(now())

  @@map("excuses")
}
